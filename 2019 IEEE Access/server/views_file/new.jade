doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            a(href='/') Visitor Log

        ul
            each topic in topics
                li
                    a(href='/' + topic)=topic
        article
            form(action='/',method='post')
                p
                    input(type='text' name='title' placeholder='title')
                p
                    input(type='textarea' name='description' placeholder='description')
                p
                    input(type='submit')
