doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            a(href='') Visitor Log

        ul
            each topic in topics
                -rid=encodeURIComponent(topic['@rid'])
                li
                    a(href='/' + rid)=topic['title']
        article
            h1=topic.title+'을 삭제하시겠습니까?'
           -rid=encodeURIComponent(topic['@rid'])
            form(action='/'+rid+'/delete',method='post')
                p
                    input(type='submit' value='Yes')
                p
                    a(href='/'+rid)
                        button(type='button') No
