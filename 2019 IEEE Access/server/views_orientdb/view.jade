doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            a(href='/') visitor Log
        ul
             each topic in topics
                 -rid=encodeURIComponent(topic['@rid'])
                 li
                     a(href='/'+rid)=topic['title']
        article
            if topic
                h2=topic.title
                =topic.description
                <BR>
                strong
                    ='by '+topic.author

            else
                h2 Welcome
                | this is visitor log page
        h2
            div
                a(href='/add') add
            if topic
                -rid=encodeURIComponent(topic['@rid'])
                a(href='/'+rid+'/edit/') edit
                <BR>
                a(href='/'+rid+'/delete/') delete
